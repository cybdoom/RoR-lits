!!!
%html
  %head
    %title= @page_title.blank? ? "Logic IT Solutions" : @page_title
    %meta{:content => @page_description, :name => "description"}/
    %meta{:charset => "utf-8"}/
    / <meta name="viewport" content="width=device-width, initial-scale=1.0">
    %meta{:content => "IE=Edge", "http-equiv" => "X-UA-Compatible"}/
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => false
    = csrf_meta_tags
    %link{:href => "/images/favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Great+Vibes", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Arial:300italic,300,400,400italic,600,600italic,700,700italic|Open+Sans:300italic,300,400,400italic,600,600italic,700,700italic", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Bitter:400,400italic,700|Copse", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http:////netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", :rel => "stylesheet"}/
    %script{:src => "http://www.skypeassets.com/i/scom/js/skype-uri.js", :type => "text/javascript"}
    / Adobe Edge Runtime
    / <script type="text/javascript" charset="utf-8" src="/scripts/lits_logo_hove_edgePreload.js"></script>
    :css
      .edgeLoad-ea_stage { visibility:hidden; }
    / Adobe Edge Runtime End
  %body
    .bodywrapper
      .row-1
        %header
          .fixed
            .container
              .sixteen.columns
                / Social icons
                .socials
                  .header-social
                    .textwidget
                      %iframe#_detectSkypeClient_1395151002096{:style => "display:none;"}
                      %ul.social-circle
                        %li
                          %a{:href => "http://www.facebook.com/pages/Logic-IT-Solutions/847293245284337?ref=hl", :target => "_blank"}
                          .entypo-facebook
                        %li
                          %a{:href => "http://twitter.com/L_IT_S", :target => "_blank"}
                          .entypo-twitter
                        %li
                          %a{:href => "http://www.linkedin.com/company/logic-it-staff", :target => "_blank"}
                          .entypo-linkedin
                        %li
                          %a{:href => "javascript://", :onclick => "Skype.tryAnalyzeSkypeUri('chat', '0');Skype.trySkypeUri_Generic('skype:LogicITSolutions?chat', '_detectSkypeClient_1395151002096', '0'); return false;"}
                          .entypo-skype
                .clear
                / Contact details
                #contact-details
                  %span
                    %i.fa-phone
                    +1 786 600 1652
                  %span
                    %i.fa-envelope
                    office@logic-it-solutions.com
          .row-nav
            .container
              .sixteen.columns
                / menu
                %nav#sf-menu.sf-menuwrapper.fright
                  %button.dl-trigger Open Menu
                  %ul.sf-menu
                    - if current_page?('/')
                      %li.active/
                    - else
                      %li/
                  %a{:href => "/"} Home
                  - if current_page?('/services')
                    %li.active/
                  - else
                    %li/
                  %a{:href => "/services"} Services
                  - if current_page?('/works')
                    %li.active/
                  - else
                    %li/
                  %a{:href => "/works"} Works
                  - if current_page?('/blog')
                    %li.active/
                  - else
                    %li/
                  %a{:href => "/blog"} Blog
                  - if current_page?('/about')
                    %li.active/
                  - else
                    %li/
                  %a{:href => "/about"} About
                  - if current_page?('/career')
                    %li.active/
                  - else
                    %li/
                  %a{:href => "/career"} Career
                  %li
                    %a{:href => "/#contact", :onclick => "return scrollToAnchor('contact');"} Contact
                / end menu
                / Logo
                .logo.fleft
                  %div
                    %a{:href => "/"}
                      %img{:alt => "Logic IT Solutions", :src => "/images/logo.png"}/
        = render partial: "revolution_slider" if current_page?('/')
      = yield
    / Footer
    %footer
      .footer-2
        .container
          .eight.columns
            #copyright
              \&copy; Copyright 2014 by
              = succeed "." do
                %span Logic IT Solutions
              All Rights Reserved.
    / /Footer
