.reply
  .general.partiotion
    %h3
      = t('vacancies.reply.general.title')
    = label_tag :name
    = reply.name
    %br

    = label_tag :city
    = reply.city
    %br

    = label_tag :dob
    = reply.dob
  .english.partiotion
    %h3
      = t('vacancies.reply.english.title')
    = label_tag :spoken
    = (t "vacancies.reply.english.spoken_levels")[reply.spoken.to_i]
    %br

    = label_tag :technical
    = reply.technical
  .contacts.partiotion
    %h3
      = t('vacancies.reply.contacts.title')
    .contacts-list
      = render partial: 'admin/replies/contact', collection: reply.contacts
  .cooperation.partiotion
    %h3
      = t('vacancies.reply.cooperation.title')
    = label_tag :salary
    = reply.salary
    %br

    = label_tag :work_types
    = reply.work_types
    %br

    = label_tag :work_hours
    = reply.work_hours
  .cv.partiotion
    = link_to reply.cv.url do
      = fa_icon 'file'
