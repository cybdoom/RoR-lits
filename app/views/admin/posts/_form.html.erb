    <%= f.label :body %><br>
    <%= f.cktext_area :body, :size => "100x20", :class=>"ckeditor" %>
  </div>
  <div class="field">
    <%= f.label "page title" %><br>
    <%= f.text_field :meta_title, :size => "100" %>
  </div>
  <div class="field">
    <%= f.label "page description" %><br>
    <%= f.text_field :meta_description, :size => "100" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
