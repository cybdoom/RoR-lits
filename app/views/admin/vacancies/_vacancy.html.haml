.vacancy
  .head
    .name{ title: t('vacancies.vacancy.titles.name') }
      = vacancy.name
    .salary{ title: t('vacancies.vacancy.titles.salary') }
      %div
        = fa_icon 'money'
        %div
          = vacancy.salary || t('vacancies.vacancy.salary.none')
    .owner{ title: t('vacancies.vacancy.titles.owner') }
      %div
        = fa_icon 'user'
        %div
          = vacancy.user.present? ? vacancy.user.name : t('vacancies.vacancy.user.none')
  .details{ title: t('vacancies.vacancy.titles.details') }
    = vacancy.description.html_safe

