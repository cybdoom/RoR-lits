.vacancies
  .control-panel
    .control-panel-cell.add-button
      = link_to new_admin_vacancy_path do
        = fa_icon 'plus'
    - if current_user.is_admin?
      .control-panel-cell.filter-area
        = t 'vacancies.index.filter'
        = select_tag :user_filter, select_options_user_filter

  .vacancy-list
    - if @vacancies.try(:any?)
      = render @vacancies
    - else
      .empty-result
        = t 'vacancies.index.empty-result'

= javascript_include_tag 'vacancy'
= javascript_include_tag 'vacanciesViewer'
